body {
    font-family: Helvetica, Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.5;
    position: relative;
    color: #555;
    background: #4477bd url(<%= asset_path 'bkg-drips-blue.gif' %>) left top repeat;
    background-size: 20px 24px;
}
.container{
    max-width: 1080px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 50px;
    margin-top: 100px;
}
.signin-container {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-border-radius: 15px;
    -moz-border-radius: 15px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    background-color: #fff;
    margin: 0 auto;
    max-width: 500px;
    min-width: 500px;
}
.signin-container .heading{
    background: #323232;
    border-radius: 14px 14px 0 0;
    background: -moz-linear-gradient(top, #323232 0%, #131313 100%);
}
.signin-container .heading h2 {
    font-family: Helvetica,Arial,sans-serif;
    font-weight: 300;
    margin: 0 80px;
    padding: 10px 0;
    font-size: 20px;
    line-height: 40px;
    text-align: center;
    color: #fff;
}
.signin-container form {
    padding: 30px 40px 15px 40px;
}
.signin-container form dl.form dd {
    padding-bottom: 0;
}
dl.form dd {
    padding: 0 0 25px 0;
    margin: 0;
}
dl{
    margin-bottom: 0;
}
dl.form dt {
    padding: 0 0 5px 0;
    font-weight: bold;
    color: #333;
}
input[type="text"],
textarea, .text-field,
.text-area, select[multiple] {
    box-shadow: inset 0 0 3px rgba(0, 0, 0, 0.16);
    border-radius: 3px;
    display: block;
    margin: 0;
    padding: 8px 10px;
    font-size: 14px;
    border: 1px solid #c4c4c4;
    background-color: #fff;
    line-height: 1.5;
    position: relative;
    color: #333;
    width: 400px;
}
dl.form.full input[type="text"],
dl.form.full textarea,
dl.form.full .text-field,
dl.form.full .text-area {
    box-sizing: border-box;
    width: 100%;
}
.signin-container div.call-to-signup {
    border-radius: 0 0 15px 15px;
    padding: 20px 40px;
    background-color: #f2f2f2;
    border-top: 1px solid #d0d0d0;
    font-size: 13px;
    color: #444;
}
.scrollbar {
    margin-left: 37px;
    height: 200px;
    overflow-y: scroll;
}
.force-overflow {
    min-height: 200px;
}
#style-7::-webkit-scrollbar-track{
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    background-color: #F5F5F5;
    border-radius: 10px;
}

#style-7::-webkit-scrollbar {
    width: 10px;
    background-color: #F5F5F5;
}

#style-7::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-image: -webkit-gradient(linear,
    left bottom,
    left top,
    color-stop(0.44, rgb(122,153,217)),
    color-stop(0.72, rgb(73,125,189)),
    color-stop(0.86, rgb(28,58,148)));
}
.list-group {
    padding-left: 0;
    width: 420px;
}
.list-group-item {
    border: none;
}
